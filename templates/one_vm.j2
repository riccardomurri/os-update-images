{# Template for starting a VM on ONE #}
PATH="{{ img_file }}"
DESCRIPTION="{{ name }}"
CONTEXT=[
  NETWORK="YES",
  SSH_PUBLIC_KEY="$USER[SSH_PUBLIC_KEY]" ]
CPU="0.25"
DISK=[
  IMAGE_ID="{{ image_uuid }}",
  SIZE="8192" ]
HYPERVISOR="kvm"
MEMORY="1024"
NIC=[
  NETWORK="id-sis-playground",
  NETWORK_UNAME="oneadmin",
  SECURITY_GROUPS="default" ]
OS=[
  BOOT="" ]
VCPU="1"
# for debugging
GRAPHICS=[
  LISTEN="0.0.0.0",
  TYPE="VNC" ]
